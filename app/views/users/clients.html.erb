<div class="container">
  
  <h1>Clientes</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to 'Ver', user %></td>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <div class="row">
    <div class="col-sm-12 text-center">
      
      <%= link_to '+ Nuevo Cliente', clients_new_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
