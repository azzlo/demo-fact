<div class="container">
  
  <br><br>

  <div class="row">
    <div class="col-sm-8">
      <h1>Facturas</h1>
    </div>

    <div class="col-sm-4 text-right">
      <%= link_to '+ Factura', new_bill_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Archivo</th>
        <th>Hacer pago el</th>
        <th>Detalles</th>
        <th>Pagado el</th>
        <th>Cliente</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td><%= bill.file %></td>
          <td><%= bill.do_payment_at %></td>
          <td><%= bill.details %></td>
          <td><%= bill.paid_at %></td>
          <td><%= bill.user %></td>
          <td><%= link_to 'Show', bill %></td>
          <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
          <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
